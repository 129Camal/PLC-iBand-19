extends layout

block content
    .container-fluid
      .row
        nav.col-md-2.d-none.d-md-block.bg-light.sidebar
          .sidebar-sticky
            br
            ul.nav.flex-column
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/band') A Banda
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/calendar') Calendário
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/news') Notícias
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/repertoire') Repertório
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/users') Utilizadores
              li.nav-item
                a.nav-link(href='http://localhost:4020/1/information') Informações
            br
            h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
                span Opções
            ul.nav.flex-column.mb-2
                li.nav-item
                    a.nav-link(href='http://localhost:4020/1/news/add')
                        span(data-feather='plus')
                        |                   Adicionar Noticia
                li.nav-item
                    a.nav-link(href='http://localhost:4020/1/news/remove')
                        span(data-feather='trash-2')
                        |                   Remover Noticia
        main.col-md-9.ml-sm-auto.col-lg-10.px-4(role='main')
            br
            form(action="/1/news/remove" method="POST")
                .table-responsive
                table.table.table-striped.table-sm(id="myTable")
                    thead
                        tr
                            th Data
                            th Autor
                            th Titulo
                    tbody
                        each noticia in news
                            tr
                                td  
                                    .form-check
                                        input.form-check-input(type='checkbox', value=noticia._id, id="checkbox", name="checkbox")
                                        label.form-check-label
                                        |           #{noticia.meta.data}
                                td= noticia.meta.autor
                                td= noticia.titulo
                button.btn-outline-secondary.btn-sm(type="submit") Remover 
            br
        script.
                feather.replace()